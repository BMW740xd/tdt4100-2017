<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>

<!-- JavaFX-objektene kobles til et objekt av typen average.AverageController -->
<HBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="average.AverageController">
   <children>
   	  <!-- tekstfelt, for input av nye tall -->
      <TextField fx:id="acceptValueInput" promptText="new value" />
   	  <!-- knapp, rigget til Ã¥ kalle handleAcceptValue-metoden i AverageController-objektet -->
      <Button mnemonicParsing="false" onAction="#handleAcceptValue" text="acceptValue" />
   	  <!-- tekst, for output av gjennomsnittet -->
      <Label fx:id="averageOutput" text="&lt;no average yet&gt;" />
   </children>
</HBox>
